
@model Subnautica.Models.MaterialRelationsViewModel

<div class="row">
	<div class="col-md-12 table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th></th>
					<th>Product Name</th>
					<th>Instrument Name</th>
					<th>Quantity</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var x in Model.ResourceListViewModel)
				{
					<tr>
						<td><img class="img" src="~/Content/Images/Materials/@(x.Name.Replace(" ", "_")).png" title="@x.Name" /></td>
						<td><span>@x.Name</span></td>
						<td><span>@x.InstrumentName</span></td>
						<td><span>@x.Quantity</span></td>
						<td><span>@Html.ActionLink("Edit", "MaterialRelations", new { id = x.ID }, new { @class = "edit" })</span></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

