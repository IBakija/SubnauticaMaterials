@model Subnautica.Models.MaterialsViewModel

<div class="row">
	<div class="col-md-12 table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>
					</th>
					<th>Name</th>
					<th>Type</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var x in Model.Materials)
				{
					<tr>
						<td><img class="img" src="~/Content/Images/Materials/@(x.Name.Replace(" ", "_")).png" title="@x.Name" /></td>
						<td><span>@x.Name</span></td>
						<td><span>@x.MaterialType.Name</span></td>
						<td><span>@Html.ActionLink("Edit", "Materials", new { id = x.ID }, new { @class = "edit" })</span></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
